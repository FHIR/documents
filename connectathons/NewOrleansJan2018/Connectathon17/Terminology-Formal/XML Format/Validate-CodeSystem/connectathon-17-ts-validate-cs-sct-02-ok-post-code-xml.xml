<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-17-ts-validate-cs-sct-02-ok-post-code-xml"/>

	<url value="http://wildfhir.aegis.net/fhir3-2-0/TestScript/connectathon-17-ts-validate-cs-sct-02-ok-post-code-xml"/>
	<name value="FHIR Connectathon 17 - Terminology Services - CodeSystem Validate Code - SNOMED-CT - OK - POST - Code - XML"/>
	<status value="active"/>
	<date value="2018-01-17"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="CodeSystem $validate-code tests against known SNOMED-CT codes where the expected outcome is a successful response and a valid Parameters payload with a result true value. All $validate-code operations are performed using the FHIR Operation Framework HTTP POST method with Parameters of url, code and display."/>
	<copyright value="Â© AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="CodeSystem $validate-code operation"/>
			<link value="http://hl7.org/fhir/2018Jan/codesystem-operations.html#validate-code"/>
			<link value="http://hl7.org/fhir/2018Jan/codesystem.html"/>
			<capabilities>
				<reference value="../_reference/capabilities/CodeSystemValidateCodeCapabilityStatement.xml" />
			</capabilities>
		</capability>
	</metadata>

	<fixture id="validate-code-loinc-input-01">
		<resource>
			<reference value="../_reference/input/validate-code-loinc-input-code-01.xml"/>
		</resource>
	</fixture>
	<fixture id="validate-code-valid-min">
		<resource>
			<reference value="../_reference/output/validate-code-valid-min.xml"/>
		</resource>
	</fixture>

	<profile id="ParametersProfile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Parameters"/>
	</profile>

	<test id="01-SNOMED-CT-ValidateSystolic">
		<name value="SNOMED-CT-ValidateSystolic"/>
		<description value="Validate code test for SNOMED-CT code system using HTTP POST with url, code and display parameters; where code='371037005' and display='Systolic dysfunction'. Expected response is 200 (OK) with a Parameters payload containing the result value true."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="validate-code"/>
				</type>
				<resource value="CodeSystem"/>
				<description value="Test $validate-code operation on the SNOMED-CT code system for a valid code and display."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<encodeRequestUrl value="true"/>
				<params value="/$validate-code"/>
				<sourceId value="validate-code-loinc-input-01"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Parameters."/>
				<resource value="Parameters"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Parameters resource type conforms the base FHIR specification."/>
				<direction value="response"/>
				<validateProfileId value="ParametersProfile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Parameters minimally contains the information in validate-code-valid-min."/>
				<minimumId value="validate-code-valid-min"/>
			</assert>
		</action>
	</test>
</TestScript>
