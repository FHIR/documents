	<test id="Step5-ReadAndVerifyGermlineObservation">
		<name value="Step5-ReadAndVerifyGermlineObservation"/>
		<description value="Read and verify the contents of the created Germline Observation in XML format created in step 1."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="read"/>
				</type>
				<resource value="Observation"/>
				<description value="Read using params element"/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="/${createObservationId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Observation."/>
