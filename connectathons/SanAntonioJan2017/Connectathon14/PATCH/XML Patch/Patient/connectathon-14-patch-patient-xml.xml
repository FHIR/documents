<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-14-patch-patient-xml"/>

	<url value="http://wildfhir.aegis.net/fhir/TestScript/connectathon-14-patch-patient-xml"/>
	<name value="FHIR Connectathon 14 - Patch - XML PATCH for Patient"/>
	<status value="draft"/>
	<publisher value="Cerner, AEGIS.net, Inc."/>
	<contact>
		<name value="Jenni Syed"/>
		<telecom>
			<system value="email"/>
			<value value="jenni.syed@cerner.com"/>
			<use value="work"/>
		</telecom>
	</contact>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<date value="2016-08-31"/>
	<description value="Send PATCH to EHR Patient resource using XML Patch format to update the Patient.active value."/>
	<copyright value="© Cerner 2015+, © AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Patient read, search and patch operations - patch is currently experimental so there is no formal definition within the conformance statement at this time."/>
			<link value="http://hl7.org/fhir/2017Jan/http.html#read"/>
			<link value="http://hl7.org/fhir/2017Jan/http.html#search"/>
			<link value="http://hl7.org/fhir/2017Jan/http.html#update"/>
			<capabilities>
				<reference value="../../_reference/capabilities/PatientXML.xml" />
			</capabilities>
		</capability>
	</metadata>

	<fixture id="patient-patch">
		<resource>
			<reference value="../../_reference/resources/patient-patch.xml"/>
		</resource>
	</fixture>

	<variable>
		<name value="patientSearchName"/>
		<description value="Enter a patient name to search on for a known Patient on the destination system."/>
		<hint value="[Patient Name]" />
	</variable>
	<variable>
		<name value="patientId"/>
		<path value="Patient/id" />
		<sourceId value="patient-search-response"/>
	</variable>

	<test id="Step1-SearchForPatient">
		<name value="Step1-SearchForPatient"/>
		<description value="Search for Patients using the criteria name (supplied by user in patientSearchName variable). The first returned Patient will be the one that receives the patch operation."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="search"/>
				</type>
				<resource value="Patient"/>
				<description value="Search for Patients using the criteria name (supplied by user in patientSearchName variable)."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?name=${patientSearchName}"/>
				<responseId value="patient-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other Patient records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the Bundle total value matches the number of entries in the Bundle"/>
				<expression value="Bundle.total = entry.count()"/>
			</assert>
		</action>
	</test>

	<test id="Step2-PatchPatient">
		<name value="Step2-PatchPatient"/>
		<description value="Update the Patient active value to false using XML PATCH"/>

		<action>
			<operation>
				<type>
					<system value="http://touchstone.aegis.net/fhir/testscript-operation-codes-extended"/>
					<code value="patch"/>
				</type>
				<resource value="Patient"/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="/${patientId}"/>
				<sourceId value="patient-patch"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the client requested an Accept of xml."/>
				<direction value="request"/>
				<headerField value="Accept"/>
				<operator value="contains"/>
				<value value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the client requested a Content-Type of xml."/>
				<direction value="request"/>
				<headerField value="Content-Type"/>
				<operator value="contains"/>
				<value value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the patch is setting the active value to false."/>
				<direction value="request" />
				<operator value="contains" />
				<path value="diff/replace/@sel"/>
				<value value="Patient/active"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="read"/>
				</type>
				<resource value="Patient"/>
				<description value="Read the patched Patient back to verify contents."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="/${patientId}" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Patient."/>
				<resource value="Patient"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirmation that the Patient active value was updated to the false value."/>
				<operator value="equals"/>
				<path value="Patient/active"/>
				<value value="false"/>
			</assert>
		</action>
	</test>
</TestScript>