	<variable>
		<name value="createResourceId"/>
		<path value="Patient/id"/>
		<sourceId value="patient-read-PeterChalmers"/>
	</variable>
	<variable>
		<name value="createIdentifier"/>
		<path value="Patient/identifier/value"/>
		<sourceId value="patient-create-PeterChalmers"/>
	</variable>
