	<title value="FHIR Connectathon 22 - Patient - Formal Testing - FHIR Server - Register - Client Assigned Resource Id - JSON"/>
	<status value="active"/>
	<date value="2019-08-07"/>
	<publisher value="AEGIS.net, Inc."/>
