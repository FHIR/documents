				</type>
				<resource value="Patient"/>
				<description value="Read deleted patient resource with an expected response of gone or not found"/>
				<accept value="json"/>
				<contentType value="json"/>
				<encodeRequestUrl value="true"/>
				<params value="/${createResourceId}"/>
			</operation>
		</action>
		<action>
			<assert>
