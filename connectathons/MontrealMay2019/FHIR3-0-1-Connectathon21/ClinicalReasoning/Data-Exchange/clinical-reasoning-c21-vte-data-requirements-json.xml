    <fixture id="measure-vte-1-FHIR">
        <resource>
            <reference value="./_reference/resources/Measure/measure-vte-1-FHIR.json"/>
        </resource>
    </fixture>

    <variable>
        <name value="createMeasureId"/>
        <path value="Measure/id"/>
        <sourceId value="create-measure-response"/>
