			<capabilities>
				<reference value="../_reference/capabilities/LoadTestResourcesCapabilitiesStatement.xml" />
			</capabilities>
		</capability>
	</metadata>	

	<fixture id="location-example-hl7east">
		<resource>
			<reference value="../_reference/resources/location-example-hl7east.json"/>
		</resource>
	</fixture>
	<fixture id="organization-example-393872">
		<resource>
			<reference value="../_reference/resources/organization-example-393872.json"/>
		</resource>
	</fixture>
	<fixture id="practitioner-example-3204039">
		<resource>
			<reference value="../_reference/resources/practitioner-example-3204039.json"/>
