				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP Header Location is present. Warning only as this is optional but servers are encouraged to return this."/>
				<headerField value="Location"/>
				<operator value="notEmpty"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="search"/>
				</type>
				<resource value="Sequence"/>
				<description value="Search for the created Sequence by the patient reference and variant start and end values. This is necessary in order to determine the server assigned resource id and requires the desination server to also support the patient search parameter."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?patient=${searchParamSequencePatient}&amp;start=${searchParamSequenceStart}&amp;end=${searchParamSequenceEnd}"/>
				<responseId value="create-sequence-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
